# Production Environment Variables for AWS Deployment
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/portfolio_agent

# Redis Configuration  
REDIS_URL=redis://your-elasticache-endpoint:6379/0

# Security
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Keys
OPENAI_API_KEY=your-openai-api-key
POLYGON_API_KEY=your-polygon-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
NEWS_API_KEY=your-news-api-key

# Application Settings
DEBUG=False
APP_NAME=AI Portfolio Rebalancing Agent
VERSION=1.0.0

# CORS Settings (for AWS deployment)
CORS_ORIGINS=["*"]

# Market Data Settings
MARKET_DATA_UPDATE_FREQUENCY=daily
DEFAULT_MARKET_SYMBOLS=["SPY", "QQQ", "IEF", "GLD", "BTC-USD"]

# ML Model Settings
MODEL_PATH=./ml-training/models
USE_PRETRAINED_MODELS=True

# Rebalancing Settings
DEFAULT_REBALANCING_THRESHOLD=0.05
TRANSACTION_COST_PERCENTAGE=0.001

# Polygon.io Settings
POLYGON_BASE_URL=https://api.polygon.io
POLYGON_RATE_LIMIT=5

# Caching Settings
CACHE_EXPIRY_HOURS=1
CACHE_MIN_DATA_POINTS=10
